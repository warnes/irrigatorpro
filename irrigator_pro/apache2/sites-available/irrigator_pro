<VirtualHost *:80>
  ServerName irrigatorpro.org
  ServerAlias www.irrigatorpro.org prod.irrigatorpro.org
  ServerAdmin webmaster@irrigatorpro.org

  ####
  # Root URL Settings
  ####

  DocumentRoot /www/prod/irrigator_pro/root
  RedirectTemp /index.html http://irrigatorpro.org/farm/
  RedirectTemp /accounts/login http://irrigatorpro.org/farm/accounts/login/

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  <Directory /www/prod/irrigator_pro/root/>
    Order allow,deny
    Allow from all
  </Directory>

  ####
  # Trac Settings
  ####

  Alias /trac/chrome/common /www/prod/irrigator_pro/trac/htdocs/common
  Alias /trac/chrome/site /www/prod/irrigator_pro/trac/htdocs/site

  <Directory /www/prod/irrigator_pro/trac/htdocs>
    Options FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>

  WSGIScriptAlias /trac /www/prod/irrigator_pro/trac/cgi-bin/trac.wsgi
  <Directory /www/prod/irrigator_pro/trac/cgi-bin>
      <Files trac.wsgi>
        WSGIApplicationGroup %{GLOBAL}
        Order deny,allow
        Allow from all
      </Files>
  </Directory>

  
  ####
  # Django Settings 
  ####
  
  Alias /robots.txt  /www/prod/irrigator_pro/static/robots.txt
  Alias /favicon.ico /www/prod/irrigator_pro/static/favicon.ico
  
  AliasMatch ^/([^/]*\.css) /www/prod/irrigator_pro/static/styles/$1
  
  Alias /media  /www/prod/irrigator_pro/media
  Alias /static /www/prod/irrigator_pro/static
  
  <Directory /www/prod/irrigator_pro/static >
      Order deny,allow
      Allow from all 
  </Directory>
  
  WSGIScriptAlias /farm /www/prod/irrigator_pro/irrigator_pro/wsgi.py
  
  <Directory /www/prod/irrigator_pro/irrigator_pro>
      <Files wsgi.py>
          Order deny,allow
          #Require all granted
          Allow from all 
      </Files>
  </Directory>
  
  <Directory />
      AllowOverride None
      Order Deny,Allow
      Deny from all
  </Directory>

</VirtualHost>

